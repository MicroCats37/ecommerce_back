---

import ShopFooter from "../components/layout/Footer/ShopFooter.astro";
import Navbar from "../components/layout/Navbar/Navbar.astro";
import RootLayout from "./RootLayout.astro";

export interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<RootLayout title={title}>
  <Navbar />

  <main class="grid place-items-start">
    <div class="w-full mx-auto px-4 h-full">
      <slot />
    </div>
  </main>

  <ShopFooter />
</RootLayout>
